datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String?
  createdAt DateTime? @default(now())
  comments  Comment[] @relation("Comment_author")
  author    Author?   @relation("Author_user")
}

model Post {
  id        String    @id @default(cuid())
  createdAt DateTime? @default(now())
  title     String    @default("")
  body      String    @default("")
  likes     Int?      @default(0)
  author    Author?   @relation("Post_author", fields: [authorId], references: [id])
  authorId  String?   @map("author")
  comments  Comment[] @relation("Comment_post")
  tags      Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Comment {
  id        String    @id @default(cuid())
  createdAt DateTime? @default(now())
  body      String    @default("")
  post      Post?     @relation("Comment_post", fields: [postId], references: [id])
  postId    String?   @map("post")
  author    User?     @relation("Comment_author", fields: [authorId], references: [id])
  authorId  String?   @map("author")

  @@index([postId])
  @@index([authorId])
}

model Author {
  id        String    @id @default(cuid())
  nickname  String    @default("")
  createdAt DateTime? @default(now())
  posts     Post[]    @relation("Post_author")
  user      User?     @relation("Author_user", fields: [userId], references: [id])
  userId    String?   @unique @map("user")
}

model Tag {
  id        String    @id @default(cuid())
  createdAt DateTime? @default(now())
  name      String    @unique @default("")
  posts     Post[]    @relation("Post_tags")
}
